{
	"name": "@balena/mocha-pod",
	"version": "0.0.1",
	"description": "Mocha + Docker. Run integration tests in a docker container",
	"homepage": "https://github.com/balena-io-modules/mocha-pod#readme",
	"main": "build/index.js",
	"types": "build/index.d.ts",
	"keywords": [
		"balena",
		"typescript",
		"mocha",
		"testing",
		"integration"
	],
	"author": "Felipe Lalanne <felipe@balena.io>",
	"license": "Apache-2.0",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/balena-io-modules/mocha-pod.git"
	},
	"bugs": {
		"url": "https://github.com/balena-io-modules/mocha-pod/issues"
	},
	"files": [
		"build/"
	],
	"scripts": {
		"clean": "rimraf build",
		"build": "npm run clean && tsc",
		"lint": "balena-lint --typescript lib tests",
		"lint-fix": "balena-lint --typescript --fix lib tests",
		"test:node": "mocha -r ts-node/register -r lib/attach.ts --reporter spec tests/**/*.spec.ts",
		"test": "npm run build && npm run lint && npm run test:node",
		"test:fast": "npm run build && npm run test:node",
		"prepack": "npm run build"
	},
	"devDependencies": {
		"@balena/lint": "^5.4.2",
		"@types/chai": "^4.2.18",
		"@types/chai-as-promised": "^7.1.4",
		"@types/dockerode": "^3.3.9",
		"@types/mocha": "^8.2.3",
		"balena-config-karma": "^3.0.0",
		"chai": "^4.3.4",
		"chai-as-promised": "^7.1.1",
		"husky": "^4.2.5",
		"lint-staged": "^11.0.0",
		"rimraf": "^3.0.2",
		"ts-node": "^10.9.1",
		"typescript": "^4.7.4"
	},
	"dependencies": {
		"@balena/compose": "^2.1.0",
		"dockerode": "^3.3.2",
		"mocha": "^8.4.0"
	}
}
